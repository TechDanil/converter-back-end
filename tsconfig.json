{
  "compilerOptions": {
    "target": "ES2020",        
    "module": "CommonJS",        
    "outDir": "./dist",   
    "rootDir": "./src",         
    "strict": true,          
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,        
    "sourceMap": true,
  },

  "include": ["src/**/*.ts"],
  "exclude": ["/node_modules/", "build/", "public/"]
}